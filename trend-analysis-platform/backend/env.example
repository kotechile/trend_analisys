# Application
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database
DATABASE_URL=postgresql://trendtap:password@localhost:5432/trendtap
SQL_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://trendtap.com

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# External APIs
# Google Trends
GOOGLE_TRENDS_API_KEY=your-google-trends-api-key

# Affiliate Networks
SHAREASALE_API_KEY=your-shareasale-api-key
IMPACT_API_KEY=your-impact-api-key
AMAZON_ASSOCIATES_TAG=your-amazon-tag
CJ_API_KEY=your-cj-api-key
PARTNERIZE_API_KEY=your-partnerize-api-key

# DataForSEO
DATAFORSEO_USERNAME=your-dataforseo-username
DATAFORSEO_PASSWORD=your-dataforseo-password

# LLM Providers
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Social Media APIs
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
TIKTOK_API_KEY=your-tiktok-api-key

# Content Optimization
SURFER_SEO_API_KEY=your-surfer-seo-api-key
FRASE_API_KEY=your-frase-api-key
COSCHEDULE_API_KEY=your-coschedule-api-key

# Export Platforms
GOOGLE_DOCS_API_KEY=your-google-docs-api-key
NOTION_API_KEY=your-notion-api-key
WORDPRESS_API_URL=your-wordpress-api-url
WORDPRESS_API_KEY=your-wordpress-api-key

# File Uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=text/csv,application/csv

# Performance
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30